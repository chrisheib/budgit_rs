<div>
    <h1>Transaktion eintragen</h1>
</div>
<form action="/add_transact" method="POST">
    <div class="container bg-dark d-grid">
        <div class="mb-3">
            <div class="row">
                <label class="form-label" for="value">Wert</label>
            </div>
            <div class="row">
                <input class="mx-1 row" min="0" name="value" placeholder="0.00" placeholder="Wert" step="0.01" style="text-align: right;" type="number">
            </div>
        </div>
        <div class="mb-3">
            <div class="row">
                <label class="form-label" for="subcat">Kategorie</label>
                <select aria-label="Default select example" class="form-select" name="subcat">
                    {% for c in categories %}
                        {% for sc in c.sc %}
                            <option value="{{sc.id}}">({{ c.name }})
                                {{sc.name}}</option>
                        {% endfor %}
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="mb-3">
            <div class="row">
                <label class="form-label" for="value">Person</label>
            </div>
            <div class="row">
                <input class="mx-1 row" list="payee_datalist" name="value" placeholder="Person" type="text">
            </div>
        </div>
        <div class="mb-3">
            <div class="row">
                <label class="form-label" for="date">Datum</label>
            </div>
            <div class="row">
                <input id="date" name="date" type="date">
            </div>
        </div>
        <input class="btn btn-primary" type="submit" value="Erstellen">
    </div>
</form>